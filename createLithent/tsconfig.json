{
  "include": ["**/*.ts", "./package.json"],
  "exclude": ["dist", "express", "**/node_modules/**", "__tests__"],
  "compilerOptions": {
    "lib": ["DOM", "DOM.Iterable", "ES2022"],
    "target": "ES2020",
    "module": "ES2020",
    "skipLibCheck": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "resolveJsonModule": true,
    "declaration": true,
    "esModuleInterop": true,
    "outDir": "dist",
    "rootDir": "."
  }
}
