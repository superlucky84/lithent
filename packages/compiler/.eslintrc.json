{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "globals": {
    "PRODUCTION": true
  },
  "extends": ["plugin:prettier/recommended"],
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "rules": {
    "require-jsdoc": 0,
    "max-len": "off"
  }
}
